{
	"Angular Component": {
		"prefix": "ng2component",
		"body": [
			"import {Component, OnInit} from 'angular2/angular2';",
			"",
			"@Component({",
			"\tselector: '${selector}',",
			"\ttemplateUrl: '${templatePath}'",
			"})",
			"",
			"export class ${componentName}Component implements OnInit {",
			"\tconstructor() { }",
			"",
			"\tonInit() { }",
			"}"
		]
	}
}